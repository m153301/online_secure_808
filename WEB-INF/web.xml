<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee web-app_2_4.xsd"
	version="2.4">


   <servlet>
		<servlet-name>ItemInfoRegist</servlet-name>
		<servlet-class>servlet.ItemInfoRegistServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ItemInfoRegist</servlet-name>
		<url-pattern>/jsp/worker/ItemInfoRegistServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/jsp/common/LoginServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LogOutServlet</servlet-name>
		<servlet-class>servlet.LogOutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogOutServlet</servlet-name>
		<url-pattern>/jsp/common/LogOutServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CustomerRegistServlet</servlet-name>
		<servlet-class>servlet.CustomerRegistServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CustomerRegistServlet</servlet-name>
		<url-pattern>/jsp/common/CustomerRegistServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>WorkerRegistServlet</servlet-name>
		<servlet-class>servlet.WorkerRegistServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>WorkerRegistServlet</servlet-name>
		<url-pattern>/jsp/worker/WorkerRegistServlet</url-pattern>
	</servlet-mapping>
	
	<filter>
	<filter-name>
		CustomerFilter
	</filter-name>
	<filter-class>
		servlet.CustomerFilter
	</filter-class>
	<init-param>
		<param-name>loginPage</param-name>
		<param-value>/jsp/common/Login.jsp</param-value>
	</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>CustomerFilter</filter-name>
		<url-pattern>/jsp/worker/*</url-pattern>
	</filter-mapping>
	
	<filter>
	<filter-name>
		AttackFilter
	</filter-name>
	<filter-class>
		servlet.AttackFilter
	</filter-class>
	<init-param>
		<param-name>loginPage</param-name>
		<param-value>/jsp/common/Login.jsp</param-value>
	</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>CustomerFilter</filter-name>
		<url-pattern>/jsp/worker/*</url-pattern>
		<url-pattern>/jsp/customer/*</url-pattern>
	</filter-mapping>
	
</web-app>

